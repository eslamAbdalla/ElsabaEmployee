        <activity
            android:name=".Home"
            android:configChanges="orientation|screenSize"
            android:label="@string/requests" />
        <activity
            android:name=".LogIn"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>


</manifest>